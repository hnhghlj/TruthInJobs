[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */venv/*,
    */env/*,
    */staticfiles/*,
    */media/*,
    */logs/*,
    */tests/*,
    manage.py,
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # module imported but unused
per-file-ignores =
    __init__.py:F401
max-complexity = 10

